% recherche conseil constitutionnel
\def\conseilcons{http://recherche.conseil-constitutionnel.fr/?expert=2\&}

\RequirePackage{hyperref}

\newcommand{\eurlex}[1]{\href{\eurlexsearch text=#1}{#1}} 
% FIXME: remplacer \nofrench@punctuation qui semble limité à
% polyglossia et ne fonctionne pas avec babel?
\newcommand{\ecli}[1]{\href{\eurlexsearch ECLI=ECLI:#1}{\nofrench@punctuation ECLI:#1}} 

\newcommand{\cjue}[1]{\href{\curiajuris num=#1}{#1}}

\newcommand{\ccass}[1]{\href{\legifrancerechjurijudi rech_simple.judi.champ2.title=#1}{#1}}
\newcommand{\cetat}[1]{\href{\arianesearch dec_id_t=#1}{#1}}
\newcommand{\ccons}[1]{\href{\conseilcons filtres3=#1}{#1}}

\newcommand{\cciv}[1]{\href{\legifranceccivill art=#1}{#1}}
\newcommand{\cprointl}[2]{\href{\legifrancecprointl art=#1#2}{\MakeUppercase{#1.}\thinspace #2}}

